  "description": "",
  "main": "index.js",
  "scripts": {
  "start": "cross-env NODE_ENV=PRODUCTION node build/index.js",
  "dev": "concurrently \"tsc -w\" \"cross-env NODE_ENV=DEVELOPMENT nodemon build/index.js\"",
  "ts.check": "tsc --project tsconfig.json",
  "build": "rimraf build && npx prisma generate --schema=./src/prisma/schema.prisma && tsc",
  "generate": "npx prisma generate --schema=./src/prisma/schema.prisma",
  "prisma:push": "npx prisma generate --schema=./src/prisma/schema.prisma && npx prisma db push --schema=./src/prisma/schema.prisma"
},
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
